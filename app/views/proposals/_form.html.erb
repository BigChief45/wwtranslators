<%= form_for [@job, Proposal.new] do |f| %>
   <div class="form-group">
      <%= f.label :content, 'My Proposal' %>
      <%= f.text_area :content, rows: '5', class: 'form-control' %>
   </div>
   
   <div class="form-group">
      <%= f.submit 'Apply to Job', class: 'btn btn-success' %>
   </div>
<% end %>